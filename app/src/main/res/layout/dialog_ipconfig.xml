<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginRight="10dp"
    android:background="@drawable/bg_second_top"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_find_new_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What do you want to do?" />
         <TextView
            android:id="@+id/tv_curr_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="current server:192.168.1.253"
            android:textColor="@color/red" />
    </LinearLayout>

    <TextView
        android:id="@+id/fengge"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_title"
        android:layout_marginBottom="10dp"
        android:background="#dcd7d7" />

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_below="@id/fengge"
        android:layout_marginTop="10dp"
        android:background="@drawable/about_btn_normal_bg"
        android:orientation="horizontal" >

        <View
            android:layout_width="1.0px"
            android:layout_height="fill_parent"
            android:background="#ffd2d2d2" />

        <TextView
            android:id="@+id/btn_custom_ip"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:gravity="center_horizontal|center_vertical"
            android:text="自定义ip"
            android:textSize="14sp" />

        <View
            android:layout_width="1.0px"
            android:layout_height="fill_parent"
            android:background="#ffd2d2d2" />

        <EditText 
            android:id="@+id/et_input"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="192.168.6.103"/>
        
        <View
            android:layout_width="1.0px"
            android:layout_height="fill_parent"
            android:background="#ffd2d2d2" />
        
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dip"
            android:background="@drawable/button_update_selector"
            android:gravity="center_horizontal|center_vertical"
            android:text="确定"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_below="@id/ll_1"
        android:layout_marginTop="10dp"
        android:background="@drawable/about_btn_normal_bg"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_localserver"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginRight="5dip"
            android:background="@drawable/button_update_selector"
            android:gravity="center_horizontal|center_vertical"
            android:text="2.2"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <View
            android:layout_width="1.0px"
            android:layout_height="fill_parent"
            android:background="#ffd2d2d2" />

        <Button
            android:id="@+id/btn_test_server"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/button_update_selector"
            android:gravity="center_horizontal|center_vertical"
            android:text="3.3"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <View
            android:layout_width="1.0px"
            android:layout_height="fill_parent"
            android:background="#ffd2d2d2" />

        <Button
            android:id="@+id/btn_hbx_server"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/button_update_selector"
            android:gravity="center_horizontal|center_vertical"
            android:text="福佳"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        
         <View
            android:layout_width="1.0px"
            android:layout_height="fill_parent"
            android:background="#ffd2d2d2" />

        <Button
            android:id="@+id/btn_chan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:textColor="@android:color/black"
            android:background="@drawable/button_update_selector"
            android:gravity="center_horizontal|center_vertical"
            android:text="191.1"
            android:textSize="14sp" />
        
        
        <View
            android:layout_width="1.0px"
            android:layout_height="fill_parent"
            android:background="#ffd2d2d2" />

    </LinearLayout>

</RelativeLayout>