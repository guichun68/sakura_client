<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"

    android:orientation="vertical"
    app:cardBackgroundColor="@color/line"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:text="調べる" />

        <TextView
            android:id="@+id/tv_kanna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@id/tv_word"
            android:layout_toRightOf="@id/tv_word"
            android:textColor="@color/gray"
            android:textSize="14sp"
            tools:text="[しらべる]" />

        <TextView
            android:id="@+id/tv_wordtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_word"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/gray_h"
            android:textSize="14sp"
            tools:text="【他动词·一段/二类】" />


        <TextView
            android:id="@+id/tv_name_cn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_wordtype"
            android:layout_toEndOf="@id/tv_wordtype"
            android:layout_toRightOf="@id/tv_wordtype"
            android:singleLine="true"
            android:textColor="@color/gray_h"
            tools:text="调查;审查" />

        <TextView
            android:id="@+id/tv_tone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_kanna"
            android:layout_alignBottom="@+id/tv_kanna"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/tv_kanna"
            android:layout_toRightOf="@+id/tv_kanna"
            android:textColor="@color/gray"
            android:textSize="14sp"
            tools:text="@string/three_tone" />
    </RelativeLayout>
</android.support.v7.widget.CardView>